<div class="top-margin">
	<!--display the post-->
	<div id="post" class="post_feed">
		<h2>Edit this post</h2>
		<%= form_for(:post, :url => update_path) do |f| %>
			<%= f.hidden_field :id, :value => @post.id.to_s %>
			<%= f.label :title, "Title:"%>
			<%= f.text_field :title, :value => @post.title, :class=>"width-textfield" %>

			<%= f.label :content, "Content:" %>
			<%= f.cktext_area :content, :value => @post.content, :class=>"width-textfield tinymce" %><br>

			<% str_tag = "" %>
			<% @tags.each do |t| %>
				<% str_tag = str_tag.blank? ? t.name : "#{str_tag},#{t.name}" %>
			<% end %>
			
			<%= f.label :tags, "Tags:" %>
			<%= f.text_field :tags, :id => "tags", :value => str_tag, :class=>"width-textfield" %><br>

			<% @all_tags.each do |t| %>
				<a class="label normal-size addTag"><%= "#{t.name}" %></a>
			<% end %>
			<br>
			<br>
			<br>
			<%= f.submit "Update", :confirm =>"Update this post?", :class => "btn btn-large btn-primary" %>
			<%= link_to "Cancel", post_path(@post), :confirm =>"Give up this post?", :class=> "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
