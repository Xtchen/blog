<!DOCTYPE html>
<html>
<head>
	<meta name="google-site-verification" content="0SZ5Rj7-NRm2tqjP_PAmKojZUff0Xqv_75H_OXDL8y0" />
  <title>Xiaotong's Blog<%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <script type="text/javascript">var CKEDITOR_BASEPATH = '/assets/ckeditor/';</script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src="http://twitter.github.com/bootstrap/assets/js/bootstrap.js"></script>
</head>
<body>
	<div class="bg">
		<!--navigate bar-->
		<div id="navbar" class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href=<%= posts_path %>>Xiaotong's Blog</a>
					<ul class="nav">
						<li class="divider-vertical"></li>
						<li><%= link_to "POSTS", posts_path%></a></li>
						<li class="divider-vertical"></li>
						<li><%= link_to "RESUME", resumes_path%></li>
						<li class="divider-vertical"></li>
						<% if signed_in? %>
							<li id="fat-menu" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
									ADMIN <b class="caret"></b>
								</a>
								<ul class="dropdown-menu" >
									<li><%= link_to "Write a post", new_post_path %></li>
									<li><%= link_to "Post a resume", new_resume_path %></li>
									<li><%= link_to "Setting", settings_path %></li>
									<li><%= link_to "Notices", notices_path %></li>
									<li class="divider"></li>
									<li><%= link_to "Sign out", signout_path %></li>
								</ul>
							</li>
						<% end %>
					</ul>
					<form class="navbar-search pull-right" id="search_form" action=<%= search_posts_path %> method="post">
						<input type="text" class="search-query" placeholder="Search" id="search_box" name="keyword"/>
					</form>
				</div>
			</div>
		</div>
		<!--main container-->
		<div id="main_container" class="container">
			<% flash.each do |key, value| %>
        		<div class="alert alert-<%= key %> top-margin"><%= value %></div>
      		<% end %>
      		<!--go top-->
		<div id="go-top" class="go-top">
			<div id="go-top-img" class="go-top-img">
				
			</div>
		</div>
			<%= yield %>
		</div>
		<!--footer-->
		<div id="footer" class="footer">
			<p class="muted" align="center">Xiaotong Chen Â©2013</p>
		</div>
	</div>
</body>
</html>
