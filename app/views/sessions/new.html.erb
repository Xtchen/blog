<div class="row top-margin">
<div class="span6 offset3">
<h1>Sign in</h1>
<br>
<%= form_for(:session, :url => sessions_path) do |f| %>
<%= f.label :name, "Name:"%>
<%= f.text_field :name %>

<%= f.label :password, "Password:" %>
<%= f.password_field :password %><br>

<%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
<% end %>
</div>
</div>